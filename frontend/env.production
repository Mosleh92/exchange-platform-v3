# Production Environment Configuration
# Exchange Platform v3 - Frontend

# API Configuration
VITE_API_URL=https://api.exchange-platform.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# CDN Configuration
VITE_CDN_BASE_URL=https://cdn.exchange-platform.com
VITE_ASSETS_PATH=/assets

# Application Configuration
VITE_APP_NAME=Exchange Platform
VITE_APP_VERSION=3.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_P2P=true
VITE_ENABLE_REMITTANCE=true
VITE_ENABLE_ACCOUNTING=true
VITE_ENABLE_REPORTS=true
VITE_ENABLE_NOTIFICATIONS=true

# Security Configuration
VITE_ENABLE_2FA=true
VITE_ENABLE_CSRF_PROTECTION=true
VITE_ENABLE_RATE_LIMITING=true

# Monitoring Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_TRACKING_URL=https://errors.exchange-platform.com

# WebSocket Configuration
VITE_WS_URL=wss://ws.exchange-platform.com
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Cache Configuration
VITE_CACHE_TTL=3600
VITE_CACHE_MAX_SIZE=100

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_SERVICE_WORKER=true

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,fa
VITE_FALLBACK_LOCALE=en

# Development Tools (disabled in production)
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_HOT_RELOAD=false 