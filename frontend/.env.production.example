# ==============================================
# پیکربندی سرور پروداکشن - Frontend
# ==============================================

# Application Configuration
VITE_APP_NAME="پلتفرم صرافی چند‌مستأجری"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="سیستم جامع مدیریت صرافی و حواله"

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_API_VERSION=v1
VITE_SOCKET_URL=https://api.yourdomain.com

# Domain Configuration
VITE_DOMAIN=yourdomain.com
VITE_APP_URL=https://yourdomain.com

# Authentication
VITE_JWT_STORAGE_KEY=exchange_access_token
VITE_REFRESH_STORAGE_KEY=exchange_refresh_token
VITE_SESSION_TIMEOUT=3600000

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_RTL=true
VITE_ENABLE_MULTI_LANGUAGE=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
VITE_PUSHER_KEY=your-pusher-key
VITE_PUSHER_CLUSTER=mt1

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# Payment Gateways
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# Error Tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Localization
VITE_DEFAULT_LANGUAGE=fa
VITE_FALLBACK_LANGUAGE=en
VITE_TIMEZONE=Asia/Tehran

# Performance
VITE_ENABLE_SOURCE_MAPS=false
VITE_BUNDLE_ANALYZER=false
VITE_COMPRESSION=true

# Security
VITE_ENABLE_CSP=true
VITE_SECURE_HEADERS=true

# Development/Debug (should be false in production)
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false
