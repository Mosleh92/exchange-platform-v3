# Development Environment Variables for Exchange Platform V3

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Local Development)
MONGODB_URI=mongodb://localhost:27017/exchange-platform-dev
REDIS_URL=redis://localhost:6379

# Security Configuration (Development Only - Change in Production)
JWT_SECRET=dev-jwt-secret-key-not-for-production-use
SESSION_SECRET=dev-session-secret-key-not-for-production
ENCRYPTION_KEY=dev-encryption-key-not-for-prod-32

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# Email Configuration (Development)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal.username
SMTP_PASS=ethereal.password
SMTP_FROM=dev@exchange.local

# Payment Gateway Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret
PAYPAL_CLIENT_ID=test-paypal-client-id
PAYPAL_CLIENT_SECRET=test-paypal-client-secret

# Exchange Rate API (Development)
EXCHANGE_RATE_API_KEY=free-tier-api-key
CRYPTO_API_KEY=free-tier-crypto-api-key

# Monitoring and Logging
LOG_LEVEL=debug
SENTRY_DSN=
DATADOG_API_KEY=

# Rate Limiting (More Lenient for Development)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7

# Trading Configuration
MIN_TRADE_AMOUNT=0.01
MAX_TRADE_AMOUNT=10000
TRADING_FEE_PERCENTAGE=0.1

# P2P Configuration
P2P_ESCROW_TIMEOUT=300000
P2P_MIN_RATING=3.0

# Multi-tenant Configuration
DEFAULT_TENANT=dev-tenant
TENANT_ISOLATION=relaxed