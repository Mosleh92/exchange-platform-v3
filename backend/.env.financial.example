# Financial Database Configuration
FINANCIAL_DB_HOST=localhost
FINANCIAL_DB_PORT=5432
FINANCIAL_DB_NAME=exchange_financial
FINANCIAL_DB_USER=postgres
FINANCIAL_DB_PASSWORD=your_password

# Financial Database Connection Pool
FINANCIAL_DB_MAX_CONNECTIONS=20
FINANCIAL_DB_MIN_CONNECTIONS=5
FINANCIAL_DB_ACQUIRE_TIMEOUT=30000
FINANCIAL_DB_IDLE_TIMEOUT=10000
FINANCIAL_DB_QUERY_TIMEOUT=30000

# Financial Database Sync (DANGER: Only use in development)
FINANCIAL_DB_FORCE_SYNC=false

# Existing MongoDB Configuration (keep for non-financial operations)
MONGODB_URI=mongodb://localhost:27017/exchange_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exchange_platform
DB_USER=postgres
DB_PASSWORD=your_password

# Security
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Two-Factor Authentication
TOTP_SERVICE_NAME=Exchange Platform
TOTP_ISSUER=Exchange Platform

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE=86400000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# API Configuration
API_VERSION=v1
API_BASE_URL=/api

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Compliance and Audit
AUDIT_LOG_RETENTION_YEARS=7
COMPLIANCE_MODE=strict

# Feature Flags
ENABLE_FINANCIAL_REPORTING=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AUTOMATED_RECONCILIATION=true