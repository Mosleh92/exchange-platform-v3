NODE_ENV=test
PORT=3001
FRONTEND_URL=http://localhost:5173

# Test JWT Secrets - FOR TESTING ONLY
JWT_SECRET=test-jwt-secret-for-testing-purposes-only-change-in-production
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-testing-purposes-only-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Test Database - In-Memory MongoDB
MONGODB_URI=mongodb://localhost:27017/exchange_test
REDIS_URL=redis://localhost:6379/1

# Security Settings for Testing
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Test Data Configuration
TEST_DATA_SEED=true
RESET_DB_ON_START=true

# Disable external services in test mode
DISABLE_EMAIL_SERVICE=true
DISABLE_SMS_SERVICE=true
DISABLE_PAYMENT_GATEWAY=true
DISABLE_WEBHOOK_CALLS=true

# Crypto testing
CRYPTO_ENABLED=false
WEB3_PROVIDER_URL=

# Test specific settings
SKIP_RATE_LIMITING=true
ENABLE_TEST_ROUTES=true