# Application
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/exchange
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=comprehensive-exchange-platform-jwt-secret-key-2024
SESSION_SECRET=exchange-platform-session-secret-2024

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=exchange@platform.com
SMTP_PASS=exchange-smtp-password

# Monitoring
SENTRY_DSN=https://example.sentry.io

# Frontend URL
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_EXPIRE=24h

# Exchange Rate API
EXCHANGE_API_KEY=exchange-rate-api-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Encryption & QR
CUSTOMER_ENCRYPTION_KEY=comprehensive-platform-encryption-key-2024
QR_SECRET=exchange-qr-secret-key-2024

# Multi-tenant configuration
DEFAULT_TENANT_ID=main-exchange
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://exchangeplatform.com

# Currency dealers and underground banking features
ENABLE_UNDERGROUND_BANKING=true
ENABLE_CASH_TRANSACTIONS=true
ENABLE_MULTI_CURRENCY=true
ENABLE_HAWALA_SYSTEM=true