# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/exchange_platform

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=2h

# Exchange Rate API
EXCHANGE_API_KEY=your-exchange-rate-api-key

# Email Configuration (اختیاری)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload (اختیاری)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Redis Configuration (اختیاری برای caching)
REDIS_URL=redis://localhost:6379

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Encryption & QR
CUSTOMER_ENCRYPTION_KEY=your-very-strong-encryption-key
QR_SECRET=your-qr-secret-key