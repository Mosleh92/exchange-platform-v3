# Enterprise Exchange Platform v4.0.0 Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/exchange_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=exchange_platform
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 2FA Configuration
TWO_FA_SECRET=your-2fa-secret-key-here-32-chars
TWO_FA_ISSUER=EnterpriseExchangePlatform
TWO_FA_WINDOW=1

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_MAX_RETRIES=3

# Security & Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=12

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Exchange Platform <noreply@exchange.com>

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_PERFORMANCE_MONITORING=true
AUDIT_LOG_RETENTION_DAYS=365

# Multi-Tenant Configuration
DEFAULT_TENANT_PLAN=basic
MAX_TENANTS_PER_PLATFORM=1000
MAX_BRANCHES_PER_TENANT=50
MAX_USERS_PER_TENANT=10000

# Financial Configuration
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CAD,AUD,CHF,CNY,AED,SAR
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
COMMISSION_RATE=0.01

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Crypto Configuration
ENABLE_CRYPTO_TRADING=false
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

# Notification Configuration
ENABLE_SMS_NOTIFICATIONS=false
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=ExchangePlatform

# Performance Configuration
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
CACHE_TTL=3600
API_TIMEOUT=30000

# Development Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5173
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs
