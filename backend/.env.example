NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-change-in-production
ACCESS_TOKEN_SECRET=your-access-token-secret-here-change-in-production
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here-change-in-production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/exchange-platform
MONGODB_TEST_URI=mongodb://localhost:27017/exchange-platform-test

# Redis Configuration (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379

# Encryption Configuration
ENCRYPTION_SECRET=your-encryption-secret-key-here-change-in-production-must-be-32-chars

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com
SESSION_SECRET=your-session-secret-here-change-in-production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 2FA Configuration
TWO_FA_ISSUER_NAME=Exchange Platform
TWO_FA_SERVICE_NAME=Exchange Platform V3

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=365
SECURITY_ALERT_EMAIL=security@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Production Security Settings (set to true in production)
SECURE_COOKIES=false
FORCE_HTTPS=false
