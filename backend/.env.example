NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ACCESS_SECRET=your-access-token-secret-key-here-must-be-strong
JWT_REFRESH_SECRET=your-refresh-token-secret-key-here-must-be-different

# Encryption Keys for AES-256
ENCRYPTION_KEY=your-base64-encoded-encryption-key-here-32-bytes
ENCRYPTION_KEY_PERSONAL=your-personal-data-encryption-key
ENCRYPTION_KEY_FINANCIAL=your-financial-data-encryption-key
ENCRYPTION_KEY_API=your-api-keys-encryption-key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
ENFORCE_2FA_FOR_ADMINS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# API Configuration
API_VERSION=3.0.0

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-here
