{
  "name": "exchange-platform-v3",
  "version": "1.0.0",
  "description": "Advanced Multi-tenant Cryptocurrency Exchange Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend && npm install",
    "build:production": "npm run install:all && npm run build",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy": "npm run build && npm start",
    "deploy:vercel": "vercel --prod",
    "deploy:production": "npm run build:production && npm run deploy",
    "health-check": "node scripts/health-check.js",
    "validate": "node scripts/validate-deployment.js",
    "lint": "cd backend && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mosleh92/exchange-platform-v3.git"
  },
  "keywords": [
    "cryptocurrency",
    "exchange",
    "trading",
    "blockchain",
    "react",
    "node.js",
    "mongodb"
  ],
  "author": "CodeOverlord",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.2.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.11.2",
    "compression": "^1.8.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "express-validator": "^7.2.1",
    "winston": "^3.17.0",
    "joi": "^17.9.2",
    "axios": "^1.10.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "redis": "^4.7.1",
    "socket.io": "^4.7.2",
    "bull": "^4.16.5",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
